%h1 Event Categories
= link_to "New Event Category", new_event_category_path, class: 'btn btn-primary'
%table.table.table-striped.table-bordered.data-table.table-condensed
  %thead
    %tr
      %th ID
      %th Name
      %th Slug
      %th Query
      %th Query Modifier

  %tbody
    - @event_categories.each do |event_category|
      %tr
        %td= event_category.id
        %td= link_to event_category.name, edit_event_category_path(event_category)
        %td= event_category.slug
        %td= event_category.query
        %td= event_category.query_modifier
        %td
          = link_to "Edit", edit_event_category_path(event_category), class: 'btn btn-mini'
          = link_to "Delete", event_category_path(event_category), method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Remove this category?" }