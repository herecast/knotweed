%table.table.table-striped.table-bordered.data-table.table-condensed
  %thead
    %tr
      %th Active?
      %th Controller
      %th Action
      %th Content
      %th Start Date
      %th End Date
      %th
  %tbody
    - @messages.each do |message|
      %tr{ class: "message-#{message.id}" }
        %td 
          - if message.active?
            %i.icon-ok
          - else
            %i.icon-remove
        %td= message.controller
        %td= message.action
        %td= truncate(strip_tags(message.content), length: 50)
        %td= message.start_date.strftime("%m/%d/%Y %-l:%M %p")
        %td= message.end_date.strftime("%m/%d/%Y %-l:%M %p") if message.end_date.present?
        %td.actions
          = link_to "edit", edit_message_path(message), class: "btn btn-mini btn-warning"
