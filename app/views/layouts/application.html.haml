!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Knotweed"
    %meta{:content => content_for?(:description) ? yield(:description) : "Knotweed", :name => "description"}
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Sans:400,700"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Serif"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body{:class => "#{controller_name} #{action_name} contrast-sea-blue"}
    %header
      %nav.navbar
        .navbar-inner
          .container-fluid
            = link_to "Knotweed", root_path, class: "brand"
            = link_to "#", class: "toggle-nav btn pull-left" do
              %i.icon-reorder
            - if user_signed_in?
              %ul.nav.pull-right
                = render 'layouts/user_navigation'
    #wrapper
      #main-nav-bg
      %nav#main-nav
        - if user_signed_in?
          .navigation
            %ul.nav.nav-stacked
              = render 'layouts/navigation'
      %section#content
        .container-fluid
          .row-fluid#content-wrapper
            .span12
              = render 'layouts/messages'
              = yield
