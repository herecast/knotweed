!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Knotweed"
      %meta{:content => content_for?(:description) ? yield(:description) : "Knotweed", :name => "description"}
        = javascript_include_tag "http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"
        = stylesheet_link_tag "http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css"
        = javascript_include_tag "http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"
        = stylesheet_link_tag "application", :media => "all"
        = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Sans:400,700"
        = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Serif"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    %header
      .container
        .navbar.navbar-inverse
          .navbar-inner
            %a{ class: "btn btn-navbar collapsed", data: { toggle: "collapse", target: ".nav-collapse" } }
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to "Knotweed", root_path, :class => 'brand'
            - unless controller.is_a? CustomAdmin::ContentsController
              = render 'layouts/site_navigation'
            = render 'layouts/user_navigation'
    #main{:role => "main"}
      .container
        .row
          .span12
            = render 'layouts/messages'
        = yield
        %footer
      / ! end of .container
    / ! end of #main
