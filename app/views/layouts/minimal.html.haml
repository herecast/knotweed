!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Daily UV"
    %meta{:content => content_for?(:description) ? yield(:description) : "Knotweed", :name => "description"}
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Sans:400,700"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Serif"
    = stylesheet_link_tag "minimal"
    = javascript_include_tag "application"
    = javascript_include_tag "//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry"
    = javascript_include_tag "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"
    = csrf_meta_tags
    = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    %header.container
      %h1= link_to 'Daily UV', 'http://dailyuv.com'
    %main.container= yield
