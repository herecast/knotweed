.nested-fields.card
  - if f.object.persisted?
    .control-group
      .form-control-static
        %strong= f.object.location.name
  - else
    = f.association :location, collection: Location.order('city ASC'), include_blank: false
  = f.input :location_type, as: :radio_buttons, collection: [["Standard", ''], ['Base Location', 'base']]

  %p= link_to_remove_association "Remove Location", f, class: 'btn btn-danger'
