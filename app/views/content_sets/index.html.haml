.row-fluid
  .span12.box.bordered-box.blue-border
    .box-header.blue-background
      .title
        %i.icon-search
        Find Content Sets
      .actions
        %a.btn.box-remove.btn-mini.btn-link{ href: "#" }
          %i.icon-remove
        %a.btn.box-collapse.btn-mini.btn-link{ href: "#" }
          %i
    .box-content
      = search_form_for @search, url: content_sets_path do |f|
        .controls.controls-row
          .field.span3
            = f.label :organization_id_in, "Organizations"
            = f.collection_select :organization_id_in, Organization.accessible_by(current_ability), :id, :name, {}, { multiple: true, class: "chosen-select" }
          .field.span3
            = f.label :import_method_in, "Import Method"
            = f.select :import_method_in, ContentSet::IMPORT_METHODS, {}, { multiple: true, class: "chosen-select", include_blank: true }
          .field.span3
            = f.label :status_in, "Status"
            = f.select :status_in, ContentSet::STATUSES, {}, { multiple: true, class: "chosen-select", include_blank: true }
          .field.span2
            = f.label :import_priority_eq, "Import Priority"
            = f.select :import_priority_eq, ContentSet::IMPORT_PRIORITIES, include_blank: true
        .form-actions
          = f.submit "Search", class: "btn btn-primary"
          = f.submit "Reset", name: "reset", class: "btn"
%table.table.table-striped.table-bordered.data-table.table-condensed
  %thead
    %tr
      %th ID
      %th Name
      %th Organization
      %th Status
      %th Date Range
      %th Ongoing?
      %th Import Method
      %th Import Priority
      %th
  %tbody
    - @content_sets.each do |content_set|
      %tr{ class: "content_set-#{content_set.id}" }
        %td= content_set.id
        %td= link_to content_set.name, edit_content_set_path(content_set)
        %td 
          - if content_set.organization.present?
            = link_to content_set.organization.try(:name), edit_organization_path(content_set.organization)
        %td= content_set.status
        %td= "#{content_set.start_date.try(:strftime, "%m/%d/%Y")} - #{content_set.end_date.try(:strftime, "%m/%d/%Y")}"
        %td
          - if content_set.ongoing
            %i.icon-check
        %td= content_set.import_method
        %td= content_set.import_priority
        %td= link_to "Import Jobs", import_jobs_path(content_set_id: content_set.id), class: "btn btn-mini btn-success"
