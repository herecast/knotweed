%p= @event.title

%p
  - @event.event_instances.each do |instance|
    = event_instance_display(instance)
    %br

- if @venue.present?
  %p
    = @venue.name if @venue.name.present?
    = @venue.address if @venue.address.present?
    = @venue.phone if @venue.phone.present?
    = @venue.email if @venue.email.present?

%p= @event.event_url if @event.event_url.present?


= (@event.raw_content).html_safe

- if @event.cost.present?
  %p
    Cost: #{@event.cost}

- if @event.sponsor_url.present?
  %p
    Sponsor: #{@event.sponsor_url}

- if @event.links.present?
  %p
    - @event.links.each do |k,v| 
      #{k}: #{v}
      %br

%p
  - if @base_uri.present?
    - url = "#{@base_uri}/events/#{@event.content_id}/#{@event.event_instances.first.id}"
  - else
    - url = "http://www.dailyuv.com/events"

  = 'View map and discover more on '
  = link_to 'dailyUV.com', url