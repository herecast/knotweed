= simple_form_for [:admin, @data_context], html: { class: "form form-horizontal" } do |f|
  = f.error_notification
  = f.input :context, label: "Context Name"
  - if @data_context.id
    = f.input :loaded, label: "Loaded?", disabled: true
    = f.input :last_load, as: :string, disabled: true
  .form-actions
    = f.submit class: "btn btn-primary"
