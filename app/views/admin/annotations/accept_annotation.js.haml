$("#annotation_form").html("");
$("#annotation_form").hide();

-# find the underline corresponding to the submitted annotation
-# and give it the "reviewed" class
-# if for some reason accepted was set to nil, remove class reviewed
if ("#{@annotation.accepted}" != "") {
$(".t_underline.#{@annotation.annotation_id}").addClass("reviewed");
} else {
$(".t_underline.#{@annotation.annotation_id}").removeClass("reviewed");
}

total = #{@annotation_report.annotations.count};
reviewed = #{@annotation_report.annotations.where("accepted IS NOT NULL").count};
$("#num-reviewed").html(reviewed + " of " + total + " reviewed");
