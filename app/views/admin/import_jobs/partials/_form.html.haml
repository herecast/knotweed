= simple_form_for [:admin, import_job], html: { data: { id: import_job.id }, class: "form form-horizontal" } do |f|
  = f.error_notification
  = f.input :name
  = f.input :source_path
  .control-group.boolean.optional.recurring
    = label_tag "import_job_recurring", "Recurring?", { class: "boolean optional control-label" }
    .controls
      = check_box_tag "import_job_recurring"
  = f.input :frequency, hint: "Repeat every x minutes", wrapper_html: { class: "frequency" }
  = f.association :parser, collection: Parser.accessible_by(current_ability, :read), input_html: { class: "select2 span4" }
  - if current_user.has_role? :admin
    = f.association :organization, input_html: { class: "select2 span4" }
  #params_fields
  .form-actions
    = f.submit class: "btn btn-primary"
