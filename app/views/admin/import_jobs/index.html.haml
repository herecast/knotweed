#wrapper
  .row
    .well
      = link_to "Create New Import Job", new_admin_import_job_path, class: "btn btn-primary"
      %table.table.table-striped
        %thead
          %tr
            %th.span2 Name
            %th.span1 Parser
            %th.span1 Organization
            %th.span1 Last Run
            %th.span1
            %th.span1 Status
        %tbody
          - @import_jobs.each do |job|
            %tr{ class: "job-#{job.id}" }
              %td= job.name
              %td= job.parser.name if job.parser
              %td= job.organization.name
              %td= job.last_run_at.strftime("%m/%d/%Y %I:%M%p") if job.last_run_at.present?
              %td.run-job-button
                = action_button_for_job(job)
              %td.job-status
                %div{ class: "alert alert-#{alert_class_for_status(job.status)}" }= job.status
