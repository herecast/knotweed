.row-fluid
  .span12.box.bordered-box.blue-border
    .box-header.blue-background
      .title
        %i.icon-search
        Find Users
      .actions
        %a.btn.box-remove.btn-mini.btn-link{ href: "#" }
          %i.icon-remove
        %a.btn.box-collapse.btn-mini.btn-link{ href: "#" }
          %i
    .box-content
      = search_form_for @search, url: users_path do |f|
        .controls.controls-row
          .field.span2
            = f.label :id_eq, "ID"
            = f.number_field :id_eq, class: 'span12'
          .field.span3
            = f.label :name_cont, "Name"
            = f.text_field :name_cont, class: 'span12'
          .field.span3
            = f.label :email_eq, "Email"
            = f.text_field :email_eq, class: "span12"
        .form-actions
          = f.submit "Search", class: "btn btn-primary"
          = f.submit "Reset", name: "reset", class: "btn"

.span5
  = paginate @users, window: 2 if @users.present?
%h3 Users
.span12
  %table.table.table-condensed
    %thead
      %tr
        %th Username
        %th Email
        %th Registered
        %th Role
        %th Organization
        %th
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.name, user
          %td= user.email
          %td= user.created_at.try(:to_date)
          %td= user.roles.first.name.titleize unless user.roles.first.nil?
          %td= Organization.with_role(:manager, user).first.try(:name)
          %td
            %a.btn-warning.btn.btn-mini{ href: edit_user_path(user), type: "button" } Edit User
