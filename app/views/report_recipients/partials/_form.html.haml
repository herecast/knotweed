= simple_form_for @report_recipient, html: { class: 'form' }, remote: true do |f|
  = f.error_notification
  = f.association :report, label_method: :title,
    collection: Report.where(id: @report_recipient.report_id),
    input_html: { class: 'input-block-level' }, include_blank: false
  = f.association :user, label_method: :name,
    collection: User.where(id: @report_recipient.user_id),
    input_html: { class: 'input-block-level' }, include_blank: false
  = f.input :alternative_emails, placeholder: 'BernieSanders@email.com,JillStein@email.com',
    input_html: { class: 'input-block-level' }
  .form-actions
    = f.submit class: 'btn btn-primary'
