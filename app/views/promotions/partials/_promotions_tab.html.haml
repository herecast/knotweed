- content ||= nil
- publication ||= content.publication
- promotions = PromotionsHelper.get_promotion_list(publication, content)
%table.table.table-striped.table-condensed#promotions_table
  %thead
    %tr
      %th ID
      %th Content
      %th Class
      %th Description
      %th Active
  %tbody#promotion_list
    - promotions.each do |promotion|
      = render "promotions/partials/promotion_row", promotion: promotion
- if controller_name == "contents" or controller_name == "events"
  = link_to "+ Create New PromotionBanner", 
    new_publication_promotion_path(publication_id: publication.id,
    content_id: content.id, promotable_type: 'PromotionBanner'),
    class: "btn btn-primary"
  = link_to "+ Create New PromotionListserv", 
    new_publication_promotion_path(publication_id: publication.id,
    content_id: content.id, promotable_type: 'PromotionListserv'),
    class: "btn btn-primary", disabled: !can_be_listserv_promoted(content)
